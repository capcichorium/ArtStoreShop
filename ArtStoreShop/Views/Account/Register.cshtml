@model ArtStoreShop.ViewModels.RegisterViewModel

<div class="bform py-5" style="margin-left: 35%">
    <!-- Row -->
    <div class="row">
        <div class="container">
            <div class="col-lg-6 align-justify-center pr-4 pl-0 contact-form">
                <div class="">
                    <h2 class="mb-3 font-weight-light">Регистрация нового пользователя</h2>
                    
                    <form class="mt-3" method="post" asp-controller="Account" asp-action="Register">
                        <div class="row">
                            <div asp-validation-summary="ModelOnly"></div>
                            <div class="col-lg-12" style="margin-top: 5%">
                                <div class="form-group">
                                    <input class="form-control" type="text" placeholder="Имя" asp-for="Name">
                                    <span asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <input class="form-control" type="email" placeholder="Электронная почта" asp-for="Email">
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input class="form-control" type="password" placeholder="Пароль" asp-for="Password">
                                    <span asp-validation-for="Password"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input class="form-control" type="password" placeholder="Повторите пароль" asp-for="PasswordConfirm">
                                    <span asp-validation-for="PasswordConfirm"></span>
                                </div>
                            </div>

                            <div class="col-lg-12" style="margin-top: 5%">
                                <button type="submit" class="btn btn-outline-dark"><span>Создать аккаунт</span></button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-6 right-image pl-3" style="background-image:url(https://bootstraptema.ru/images/demo/600x600/demo1.jpeg);">
        </div>
    </div>
</div>

