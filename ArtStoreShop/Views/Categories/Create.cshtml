@model ArtStoreShop.Models.Category
@{
    ViewBag.Title = "Добавление категорий";
}
<form asp-action="Create" asp-controller="Categories">
    <div class="form-group">
        <label asp-for="CategoryName" class="control-label">Название категории</label>
        <input type="text" asp-for="CategoryName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Desc" class="control-label">Описание</label>
        <input type="text" asp-for="Desc" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-primary" />
    </div>
</form>