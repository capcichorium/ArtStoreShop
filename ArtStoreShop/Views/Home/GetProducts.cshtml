<div class="row row-cols-3" style="margin-bottom: 100px; margin-top 40px">

    @foreach (var item in Model.Products)
    {
        <div class="card-img" style="width: 250px; height : 400px; margin-left: 10px; margin-top: 10px">
            <img src=@item.Avatar class="card-img-top" style="width: 180px; height : 250px">
            <div class="card-body">
                <div class="card-text">
                    <p class="card-title">@item.Name</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <form class="mb-1" method="post">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-secondary" asp-route-id="@item.Id" asp-action="AddToCart" asp-controller="Home">Добавить в корзину</button>
                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    }
<</div>>